@model BaukCMS.Models.Models.Company

@{
    ViewBag.Title = "Create New Company";
}

<section class="panel">
    <header class="panel-heading">
        Add New Company
    </header>
    <div class="panel-body table-responsive">

        @using (Html.BeginForm("Create", "Company", FormMethod.Post, new { @Class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-lg-2 col-sm-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                    <div class="error-div">
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 col-sm-2 control-label"></label>
                <div class="col-lg-10">
                    <input type="submit" value="Add User" class="btn btn-success btn-sm pull-left" />&nbsp;&nbsp;
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back To List", "Index", null, new { @class = "btn btn-danger btn-sm pull-left" })
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
